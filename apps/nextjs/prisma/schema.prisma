generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5433/db"
}

model User {
  id       String  @id @default(cuid())
  email    String
  password String
  owner  Owner?

  @@unique([email])
}

model Owner {
  id        String  @id @default(cuid())
  firstname String
  lastname  String
  age       Int
  userId    String  @unique
  user      User    @relation(fields: [id], references: [id])
  projects  Project[]

  @@unique([firstname, lastname])
}
model Task {
  id         String    @id @default(cuid())
  name       String
  completed  Boolean
  projectId  String
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  priority   Priority
  tags       TaskTag[]
}

model Tag {
  id    String    @id @default(cuid())
  name  String
  color String
  tasks TaskTag[]
}

model TaskTag {
  taskId String
  tagId  String
  task   Task   @relation(fields: [taskId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])
  @@id([taskId, tagId])
}

model Project {
  id          String    @id @default(cuid())
  label       String
  ownerId     String
  owner       Owner     @relation(fields: [ownerId], references: [id])
  dueDate     BigInt
  description String
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  tasks       Task[]  
  // 

}

model Category {
  id    String    @id @default(cuid())
  label String
  color String
  projects Project[]
}

enum Priority {
  low
  medium
  high
}