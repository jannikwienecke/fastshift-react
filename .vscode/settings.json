{
  "typescript.tsdk": "node_modules/typescript/lib",
  // allow autocomplete for ArkType expressions like "string | num"
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.fontSize": 14,
  // prioritize ArkType's "type" for autoimports
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    "^(node:)?os$"
  ],
  "deno.enable": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "IMPROVEMENT",
    "FEATURE",
    "IDEA",
    "REFACTOR"
  ],
  "todo-tree.highlights.customHighlight": {
    "IMPROVEMENT": {
      "icon": "zap",
      "foreground": "#FFD700",
      "iconColour": "#FFD700",
      "gutterIcon": true
    },
    "FEATURE": {
      "icon": "star",
      "foreground": "#3498DB",
      "iconColour": "#3498DB",
      "gutterIcon": true
    },
    "IDEA": {
      "icon": "light-bulb",
      "foreground": "#FFD700",
      "iconColour": "#FFD700",
      "gutterIcon": true
    },
    "REFACTOR": {
      "icon": "tools",
      "foreground": "#FFA500",
      "iconColour": "#FFA500",
      "gutterIcon": true
    }
  },
  "nxConsole.generateAiAgentRules": true
}